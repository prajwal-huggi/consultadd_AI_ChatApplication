{
  "compilerOptions": {
    "target": "ES2020",                       
    "module": "CommonJS",                     
    "lib": ["ES2020", "DOM"],                 
    "allowJs": true,                          
    "checkJs": false,                         
    "jsx": "react-jsx",                       
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "strict": true,                           
    "moduleResolution": "node",               
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,                     
    "resolveJsonModule": true,                
    "isolatedModules": true                   
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
